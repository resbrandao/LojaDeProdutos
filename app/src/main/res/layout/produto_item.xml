<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/samsung_1"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Samsung Galaxy S10+, Preto,512GB, Tela 6.4,CÃ¢m. Tripla 12MP"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="7"
        app:layout_constraintEnd_toEndOf="@+id/fotoProduto"
        app:layout_constraintStart_toStartOf="@+id/fotoProduto"
        app:layout_constraintTop_toBottomOf="@id/fotoProduto"
        />

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 800.00"
        android:textColor="#3F51B5"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/nomeProduto"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto" />

</androidx.constraintlayout.widget.ConstraintLayout>